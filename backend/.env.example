# Super Agent Platform - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# Supabase Configuration
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# ============================================
# Google Gemini AI
# ============================================
GOOGLE_GEMINI_API_KEY=your-gemini-api-key

# ============================================
# Video Generation APIs
# ============================================
# Kling AI
KLING_API_KEY=your-kling-api-key

# HeyGen (AI Avatar)
HEYGEN_API_KEY=your-heygen-api-key

# Creatomate (Template Rendering)
CREATOMATE_API_KEY=your-creatomate-api-key

# Midjourney (via proxy service)
MIDJOURNEY_API_KEY=your-midjourney-proxy-api-key

# ============================================
# Payment Gateway
# ============================================
# PortOne (KG Inicis)
PORTONE_API_KEY=your-portone-api-key
PORTONE_API_SECRET=your-portone-api-secret
PORTONE_MERCHANT_ID=your-merchant-id

# ============================================
# Optional Services
# ============================================
# Redis (for Celery background tasks)
REDIS_URL=redis://localhost:6379/0

# Sentry (error tracking)
SENTRY_DSN=your-sentry-dsn

# ============================================
# Application Settings
# ============================================
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your-super-secret-key-change-in-production

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
